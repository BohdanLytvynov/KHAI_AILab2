<Page x:Class="ContourSearcher.UI.Views.Pages.LoadImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ContourSearcher.UI.Views.Pages"
      xmlns:customControls="clr-namespace:UserControls;assembly=UserControls"
      xmlns:vm="clr-namespace:ContourSearcher.UI.ViewModels.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance vm:LoadImagePageViewModel, 
    IsDesignTimeCreatable=True}"
      >

    <Grid>
        <customControls:ImageViewer Path="{Binding PathToImg, 
    UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
    </Grid>
</Page>
