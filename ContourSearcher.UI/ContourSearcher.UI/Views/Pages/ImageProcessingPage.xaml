<Page x:Class="ContourSearcher.UI.Views.Pages.ImageProcessingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ContourSearcher.UI.Views.Pages"
      xmlns:vm="clr-namespace:ContourSearcher.UI.ViewModels.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance vm:ImageProcessingViewModel, IsDesignTimeCreatable=True}"
      Background="White" x:Name="ImgProcGrid">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource MainBorderStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <StackPanel Orientation="Vertical" Height="700">
                    <TextBlock Text="Image Smoothing:" Style="{StaticResource DescLabel}"/>
                    <Rectangle Style="{StaticResource BorderRectStyle}"/>

                    <StackPanel Style="{StaticResource HorizontalStack}" Orientation="Horizontal">
                        <Label Content="Enter new window name:" Style="{StaticResource InputTxtBoxLabel}"/>
                        <TextBox Style="{StaticResource TxtBoxInputStyle}">
                            <TextBox.Text>
                                <Binding Path="ImageSmoothingWindowName" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>

                    <CheckBox Margin="10,0,0,0"
                                Content="Use existing Window" 
                                VerticalContentAlignment="Center"
                                FontSize="20"
                                      IsChecked="{Binding UseExistingWindow, 
                                UpdateSourceTrigger=PropertyChanged, 
                                Mode=TwoWay}"/>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource HorizontalStack}">
                        <Label Content="Choose source image:" Style="{StaticResource InputTxtBoxLabel}"/>
                        <ComboBox ItemsSource="{Binding WindowNames, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding ImgSource, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      />
                    </StackPanel>

                    <CheckBox Margin="10,0,0,0"
        Content="Use dynamic update mode" 
VerticalContentAlignment="Center"
FontSize="20"
      IsChecked="{Binding UseExistsingWindowT2, 
UpdateSourceTrigger=PropertyChanged, 
Mode=TwoWay}"/>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource HorizontalStack}">
                        <Label Style="{StaticResource InputTxtBoxLabel}" Content="Choose smoothing:"/>
                        <ComboBox ItemsSource="{Binding Source={StaticResource SmoothingType}}"
                                      SelectedItem="{Binding SmoothingType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource HorizontalStack}">
                        <Label Style="{StaticResource InputTxtBoxLabel}" Content="Size1:"/>
                        <TextBox Style="{StaticResource TxtBoxInputStyle}">
                            <TextBox.Text>
                                <Binding Path="Size1" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource HorizontalStack}">
                        <Label Style="{StaticResource InputTxtBoxLabel}" Content="Size2:"/>
                        <TextBox Style="{StaticResource TxtBoxInputStyle}">
                            <TextBox.Text>
                                <Binding Path="Size2" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource HorizontalStack}">
                        <Label Style="{StaticResource InputTxtBoxLabel}" Content="Sigma1:"/>
                        <TextBox Style="{StaticResource TxtBoxInputStyle}">
                            <TextBox.Text>
                                <Binding Path="Sigma1" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Style="{StaticResource HorizontalStack}">
                        <Label Style="{StaticResource InputTxtBoxLabel}" Content="Sigma2:"/>
                        <TextBox Style="{StaticResource TxtBoxInputStyle}">
                            <TextBox.Text>
                                <Binding Path="Sigma2" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <DataErrorValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="155"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" 
        Content="Smooth Image"
        Command="{Binding OnSmoothImageButtonPressed}"
                                Style="{StaticResource SimpleButton}"/>
                    </Grid>
                    <Rectangle Style="{StaticResource BorderRectStyle}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</Page>
