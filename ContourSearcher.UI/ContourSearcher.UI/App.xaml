<Application x:Class="ContourSearcher.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ContourSearcher.UI" 
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <!--#region Sizes -->
        <system:Double x:Key="TabItemFontsizes">20
        </system:Double>

        <system:Double x:Key="GridSplitterWidth">5
        </system:Double>

        <system:Double x:Key="txtBoxInputFontSize">20
        </system:Double>

        <system:Double x:Key="txtBoxInputErrorFontSize">14
        </system:Double>

        <Duration x:Key="GridSplitterAnimDuration">0:0:0.02
        </Duration>
        <!--#endregion-->

        <!--#region Colors -->
        <Color x:Key="GridSplitterColor">black
        </Color>

        <Color x:Key="GridSplitterSelectColor">blue
        </Color>

        <Color x:Key="BorderColors">
        </Color>
        <!--#endregion-->

        <!--#region Brushes -->
        <SolidColorBrush x:Key="GridSplitterBrush" 
                         Color="{StaticResource GridSplitterColor}">
        </SolidColorBrush>
        <!--#endregion-->

        <!--#region Styles -->
        <Style x:Key="MainBorderStyle" TargetType="Border">
            <Style.Setters>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Black"/>
            </Style.Setters>
        </Style>

        <Style x:Key="TabStyle" TargetType="TabControl">
            <Style.Setters>
                <Setter Property="FontSize" Value="{StaticResource TabItemFontsizes}"/>
            </Style.Setters>
        </Style>

        <Style x:Key="VerticalGridSplitterStyle" TargetType="GridSplitter">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Width" Value="{StaticResource GridSplitterWidth}"/>
                <Setter Property="Background" Value="{StaticResource GridSplitterBrush}"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation From="{StaticResource GridSplitterColor}"
                        To="{StaticResource GridSplitterSelectColor}" 
                        Duration="{StaticResource GridSplitterAnimDuration}"
                        Storyboard.TargetProperty="Background.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>

                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation From="{StaticResource GridSplitterSelectColor}"
                        To="{StaticResource GridSplitterColor}" 
                        Duration="{StaticResource GridSplitterAnimDuration}"
                        Storyboard.TargetProperty="Background.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HorizontalGridSplitterStyle" TargetType="GridSplitter">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Height" Value="{StaticResource GridSplitterWidth}"/>
                <Setter Property="Background" Value="{StaticResource GridSplitterBrush}"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation From="{StaticResource GridSplitterColor}"
                                        To="{StaticResource GridSplitterSelectColor}" 
                                        Duration="{StaticResource GridSplitterAnimDuration}"
                                        Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>

                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation From="{StaticResource GridSplitterSelectColor}"
                                        To="{StaticResource GridSplitterColor}" 
                                        Duration="{StaticResource GridSplitterAnimDuration}"
                                        Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputTxtBoxLabel" TargetType="Label">
            <Style.Setters>
                <Setter Property="ItemsControl.FontSize" Value="18"/>
            </Style.Setters>
        </Style>

        <Style x:Key="TxtBoxInputStyle" TargetType="TextBox">
            <Style.Setters>
                <Setter Property="ItemsControl.FontSize" Value="{StaticResource txtBoxInputFontSize}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Validation.ErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border BorderBrush="OrangeRed" BorderThickness="2">
                                <Grid>
                                    <AdornedElementPlaceholder/>
                                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="OrangeRed"
                                               VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                                               FontSize="{StaticResource txtBoxInputErrorFontSize}"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="False">
                    <Setter Property="BorderBrush" Value="#FF23A829"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--#endregion-->
    </Application.Resources>
</Application>
